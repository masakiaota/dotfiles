{
    "editor.fontSize": 14,
    "editor.renderControlCharacters": true,
    // ファイルを保存するときにフォーマットしてください。フォーマッタを使用可能にして、ファイルを自動保存せず、エディターをシャットダウンしないでください。
    "editor.formatOnSave": true,
    // エディターで入力後に自動的に行の書式設定を行うかどうかを制御します
    "editor.formatOnType": true,
    // 貼り付けた内容がエディターにより自動的にフォーマットされるかどうかを制御します。フォーマッタを使用可能にする必要があります。また、フォーマッタがドキュメント内の範囲をフォーマットできなければなりません。
    "editor.formatOnPaste": true,
    // 以下のように文字列を追加します。
    //"editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。「」（）；：・？＜＞＋－＊／｛｝｜～＆％＄＃”！’　にをはがのとも",
    //	半角空白を全て表示します。
    //	"all" : いつでも表示
    //	"none" : いつでも非表示
    //	"boundary" : 単語間の単一スペースのみ非表示、以外はすべて表示
    "editor.renderWhitespace": "all",
    "editor.renderLineHighlight": "all",
    "git.enableSmartCommit": true,
    //拡張機能
    "markdown-preview-enhanced.breakOnSingleNewLine": false,
    "terminal.integrated.shell.osx": "/bin/bash",
    "git.autofetch": true,
    "editor.minimap.enabled": false,
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 5000,
    "editor.cursorSurroundingLines": 5,
    "python.formatting.autopep8Args": [
        "--ignore",
        "E402"
    ],
    "terminal.integrated.inheritEnv": false,
    "remote.SSH.remotePlatform": {
        "instance-ubuntu.us-west1-b.kaggle-masaki": "linux",
        "masaki-paper-viewer-sr": "linux",
        "instance-ubuntu.us-central1-a.kaggle-masaki": "linux",
        "ubuntu-t4.us-west1-a.kaggle-masaki": "linux",
        "benzaiten-t4.us-west1-a.kaggle-masaki": "linux",
        "benzaiten-v100.us-central1-a.kaggle-masaki": "linux",
        "benzaiten-t4-2.asia-northeast1-a.kaggle-masaki": "linux"
    },
    "notebook.lineNumbers": "on",
    "editor.inlineSuggest.enabled": true,
    "notebook.output.textLineLimit": 100,
    "security.workspace.trust.untrustedFiles": "open",
    "files.associations": {
        "*.py": "python"
    },
    "python.formatting.provider": "black",
    "jupyter.askForKernelRestart": false,
    "git.ignoreRebaseWarning": true,
    "git.confirmSync": false,
    "[python]": {
        "editor.formatOnType": true
    },
    "chatgpt.promptPrefix.addTests": "次のコードに対するテストを実装してください",
    "chatgpt.promptPrefix.findProblems": "次のコードの問題点を見つけてください",
    "chatgpt.promptPrefix.optimize": "次のコードを最適化してください",
    "chatgpt.promptPrefix.explain": "次のコードを説明してください",
    "chatgpt.promptPrefix.addComments": "次のコードにコメントを追加してください",
    "remote.SSH.useLocalServer": false,
    "python.defaultInterpreterPath": "/Users/masaki/.pyenv/versions/3.9.7/bin/python",
    "jupyter.interactiveWindow.creationMode": "perFile",
    "github.copilot.enable": {
        "*": true,
        "yaml": false,
        "plaintext": false,
        "markdown": true,
        "scminput": false
    },
    "workbench.colorTheme": "Default Dark+",
    "github.copilot-labs.showBrushesLenses": true,
    "github.copilot-labs.showTestGenerationLenses": true
}